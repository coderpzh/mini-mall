/* pages/detail/childCnps/w-dText/w-dText.wxss */
.detail-text{
  padding: 16rpx;
  border-bottom: 10rpx solid #f2f5f8;
}

.title{
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.price1{
  font-size: 50rpx;
  color: hotpink;
}

.price2{
  text-decoration: line-through;
  color: #878484;
  font-size: 24rpx;
  margin: 0 10rpx;
}

.price3{
  font-size: 28rpx;
  padding:0 4rpx;
  background-color: hotpink;
  color: #fff;
  border-radius: 16rpx;
  position: relative;
  top: -16rpx;
}

/* ------------------------------------------------------------------- */

.text-one{
  display: flex;
  padding: 40rpx 0 30rpx 0;
  border-bottom: 2rpx solid #878484;
  width: 95%;
  margin: 0 auto;
}

.text-sell{
  flex:1;
  font-size: 30rpx;
  color: #878484;
  line-height: 0;
}

.text-sell1{
  text-align: left;
}

.text-sell2{
  text-align: center;
}

.text-sell3{
  text-align: right;
}
/* ------------------------------------------------------------------- */

.text-two{
  display: flex;
  padding: 30rpx 0 30rpx 28rpx;
  justify-content: space-between;
  width: 95%;
  margin: 0 auto;
}

.text-serv{
  font-size: 34rpx;
  position: relative;
}

.text-serv::before{
  content: '';
  position: absolute;
  left: -28rpx;
  top: 10rpx;
  width: 34rpx;
  height: 34rpx;
  background: url("data:image/png;base64,") 
  no-repeat 0 0/28rpx 28rpx;
}